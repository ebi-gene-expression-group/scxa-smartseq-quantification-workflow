process {
    executor='lsf'
    queue="$SCXA_LSF_QUEUE"
    clusterOptions="$SCXA_LSF_OPTIONS"
}

executor {
    queueSize=1000
    perJobMemLimit=true
    exitReadTimeout='100000 sec'
    pollInterval = '5sec'
}

conda {
    cacheDir = "$SCXA_WORKFLOW_ROOT/envs"
    createTimeout = "30 min"
}

params {
    downloadMethod = 'http'
    maxConcurrentDownloads = 40
}
